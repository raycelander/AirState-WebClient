<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.raycelander.airstate"
        versionCode = "1" 
        version     = "1.0.0" >
    <name>Airstate</name>

    <description>
        Airstate. The Arduino based environment control
    </description>

    <author href="https://build.phonegap.com" email="r.hirter@gmail.com">
        Rainer Hirter
    </author>
    <icon src="icon.png" />
    <gap:plugin name="org.apache.cordova.splashscreen" />
    <preference name="SplashScreen" value="screen"/>
    <gap:splash gap:platform="android" gap:qualifier="port-ldpi" src="res/screen/android/splash.png" />
    <gap:splash gap:platform="android" gap:qualifier="port-mdpi" src="res/screen/android/splash.png" />
    <gap:splash gap:platform="android" gap:qualifier="port-hdpi" src="res/screen/android/splash.png" />
    <gap:splash gap:platform="android" gap:qualifier="port-xhdpi" src="res/screen/android/splash.png" />
    <gap:splash src="splash.png" />
    <preference name="SplashScreenDelay" value="4000" />

</widget>
